DEFINE FORMATO_CORTO "XXXXXXXXXXXXXXX|LEFT"
DEFINE FORMATO_LARGO "XXXXXXXXXXXXXXXXXXXX|LEFT"
DEFINE FORMATO_NUMERO "¢#######0.00|RIGHT"
DEFINE FORMATO_FECHA "dd/MM/yyyy"

PRINT "\n\n\r"
FONT "IS204" 10

PRINT "Reporte de Montos\n\r"
PRINT "Cobrados y Vendidos\n\r"
PRINT "Fecha:"
PRINTF FORMATO_FECHA TRANSACCIONES.FECHA "\n\r"

PRINT "\n\n\r"

FOREACH CLIENTE IN TRANSACCIONES.CLIENTES

	PRINT "Código:" CLIENTE.CODIGO "\n\r"
	PRINT "Cliente:" 
	PRINTF FORMATO_CORTO CLIENTE.NOMBRE "\n\r"
	PRINT "Cobrado:         " 
	PRINTF FORMATO_NUMERO CLIENTE.COBRADO "\n\r"
	PRINT "Notas de crédito:" 
	PRINTF FORMATO_NUMERO CLIENTE.NOTAS_CREDITO "\n\r"
	PRINT "Vendido:         " 
	PRINTF FORMATO_NUMERO CLIENTE.VENDIDO "\n\r"	
	PRINT "  Preventa:      " 
	PRINTF FORMATO_NUMERO CLIENTE.PREVENTA "\n\r"
	PRINT "  Facturado:     " 
	PRINTF FORMATO_NUMERO CLIENTE.FACTURADO "\n\n\r"

NEXT

PRINT "Total Cobrado:"
PRINTF FORMATO_NUMERO TRANSACCIONES.TOTAL_COBRADO "\n\r"
PRINT "Total Vendido:"
PRINTF FORMATO_NUMERO TRANSACCIONES.TOTAL_VENDIDO "\n\r"
PRINT "  Preventa:   "
PRINTF FORMATO_NUMERO TRANSACCIONES.TOTAL_PEDIDOS "\n\r"
PRINT "  Facturado:  "
PRINTF FORMATO_NUMERO TRANSACCIONES.TOTAL_FACTURAS

PRINT "\n\n\n\r"