DEFINE FORMATO_LARGO "XXXXXXXXXXXXXXXXXXXX|LEFT"
DEFINE FORMATO_FECHA "dd/MM/yyyy HH:mm:ss"
DEFINE FORMATO_LINEA_INVENTARIO "XXXXXXXXXXX|LEFT" "XXXXXXXXXXXXXXXXX|LEFT" "###|RIGHT" "###0.00|RIGHT"
DEFINE FORMATO_TOTAL "##########|LEFT"

PRINT "\n\n\r"
FONT "IS204" 10

PRINT "Inventario\n\r"
PRINT "Fecha:  " 
PRINTF FORMATO_FECHA INVENTARIOS.FECHA 
PRINT "\n\r"
PRINT "Bodega: " 
PRINTF FORMATO_LARGO INVENTARIOS.BODEGA "\n\n\r"

FOREACH DETALLECOMPANIA IN INVENTARIOS.COMPANIAS
	PRINT "Compañía: "
	PRINTF FORMATO_LARGO DETALLECOMPANIA.CODIGO "\n\r"
	
	PRINT "Código     Descripción      Alm   Det\n\r"
	FOREACH LINEA_INVENTARIO IN DETALLECOMPANIA.DETALLESINVENTARIO
		PRINTF FORMATO_LINEA_INVENTARIO LINEA_INVENTARIO.CODIGO LINEA_INVENTARIO.DESCRIPCION LINEA_INVENTARIO.ALMACEN LINEA_INVENTARIO.DETALLE "\n\r"
	NEXT
	
	PRINT "\n\r"
NEXT

PRINT "\n\r"
PRINT "Total de líneas: "
PRINTF FORMATO_TOTAL INVENTARIOS.TOTAL_LINEAS "\n\r"
PRINT "\n\r"