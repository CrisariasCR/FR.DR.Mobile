DEFINE FORMATO_CORTO "XXXXXXXXXXXXXXX|LEFT"
DEFINE FORMATO_LARGO "XXXXXXXXXXXXXXXXXXXX|LEFT"
DEFINE FORMATO_NUMERO "$#######0.00|RIGHT"
DEFINE FORMATO_FECHA "dd/MM/yyyy"

DEFINE LINEA_RECIBO "$#######0.00|LEFT" "$#######0.00|RIGHT" "$#######0.00|RIGHT"

PRINT "\n\n\r"
FONT "IS204" 10

PRINT "Reporte de Cierre de Cobro\n\n\r"
PRINT "Fecha:" 
PRINTF FORMATO_FECHA RECIBOS.FECHA "\n\r"

FOREACH RECIBO IN RECIBOS.LISTA_RECIBOS
	PRINT "Código: " RECIBO.NUMERO "\n\r"
	PRINT "Cliente:" 
	PRINTF FORMATO_LARGO RECIBO.CLIENTE_NOMBRE "                    "
	PRINT "\n\r"
	PRINT "Cobrado     Notas de crédito \n\r"
	PRINTF LINEA_RECIBO RECIBO.TOTAL_COBRADO RECIBO.TOTAL_NOTAS_APLICADAS "\n\r"
NEXT

PRINT "\n\r" 
PRINT "Total Cobrado:" 
PRINTF FORMATO_NUMERO RECIBOS.TOTAL "\n\n\r"