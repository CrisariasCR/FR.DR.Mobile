DEFINE FORMATO_LARGO "XXXXXXXXXXXXXXXXXXXXXXXX|LEFT"
DEFINE FORMATO_NUMERO "$#######0.00|RIGHT"
DEFINE FORMATO_FECHA "dd/MM/yyyy"
DEFINE FORMATO_LINEA_FACTURA "X|LEFT" "XXXXXXXX|LEFT" "XXXXXXXXXXXXX|LEFT" "#0.00|RIGHT" "#0.00|RIGHT" "$#####0.00|RIGHT"
DEFINE FORMATO_LINEA_FACTURA_HEADER "X|LEFT" "XXXXXXXX|LEFT" "XXXXXXXXXXXXX|LEFT" "XXXXX|RIGHT" "XXXXX|RIGHT" "XXXXXXXXXX|RIGHT"

PRINT "\n\n\r"
FONT "IS204" 10

FOREACH GARANTIA IN GARANTIAS.LISTA_GARANTIAS

	PRINT "Garantía\n\r"
	PRINT "Ruta: " GARANTIA.RUTA "\n\r"
	PRINT "Garantía#:  " GARANTIA.NUMERO "\n\r"
	PRINT "Fecha:     " 
	PRINTF FORMATO_FECHA GARANTIA.FECHA 
	PRINT "\n\r"
	PRINT "Cliente:   " 
	PRINTF FORMATO_LARGO GARANTIAS.CLIENTE_NOMBRE "\n\r"
	PRINT "Nit:   " 
	PRINTF FORMATO_LARGO GARANTIA.NIT "\n\r"
	PRINT "Dirección: " 
	PRINTF FORMATO_LARGO GARANTIAS.CLIENTE_DIRECCION "\n\r"
	PRINT "Compañia:  " GARANTIA.COMPANIA "\n\r"
	PRINT "Condición: " GARANTIA.CONDICIONPAGOPEDIDO "\n\r"
	PRINT "Fecha Vencimiento: " GARANTIA.FECHAVENCEFACTURA "\n\n\r"
	

	PRINT "Detalle de la Garantía\n\r"
	PRINT "                            Unidades          \n\r"
	PRINTF FORMATO_LINEA_FACTURA_HEADER "Cód" "Descripción" "Alm" "Det" "Monto" "\n\r"	

	FOREACH LINEA_GARANTIA IN GARANTIA.DETALLES
		PRINTF FORMATO_LINEA_FACTURA LINEA_GARANTIA.BONIFICADA LINEA_GARANTIA.CODIGO LINEA_GARANTIA.DESCRIPCION LINEA_GARANTIA.ALMACEN LINEA_GARANTIA.DETALLE LINEA_GARANTIA.MONTO "\n\r"
	NEXT

	PRINT "\n\r"
	PRINT "SubTotal:     "
	PRINTF FORMATO_NUMERO GARANTIA.SUB_TOTAL "\n\r"

	PRINT "Total:        " 
	PRINTF FORMATO_NUMERO GARANTIA.TOTAL "\n\n\r"
	
	PRINT "Observaciones:        " 
	PRINTF FORMATO_LARGO GARANTIA.OBSERVACIONES "\n\n\r"
	
	PRINTF FORMATO_LARGO GARANTIA.LEYENDA "\n\n\r"
NEXT