DEFINE FORMATO_CORTO "XXXXXXXXXXXXXXX|LEFT"
DEFINE FORMATO_LARGO "XXXXXXXXXXXXXXXXXXXX|LEFT"
DEFINE FORMATO_NUMERO "$#######0.00|RIGHT"
DEFINE FORMATO_FECHA "dd/MM/yyyy"

DEFINE LINEA_FACTURA "XXXXXXXX|LEFT" "XXXXXX|LEFT" "dd/MM/yyyy|LEFT" "$######.00|RIGHT"
DEFINE LINEA_MONTO "XXXXXXXXX|LEFT" "$#######.00|RIGHT"

PRINT "\n\n\r"
FONT "IS204" 10

PRINT "RESUMEN DE FACTURAS\n\r" 
PRINT "Cliente:"
PRINTF FORMATO_CORTO PEDIDOS.CLIENTE_NOMBRE 
PRINT "\n\n\r"
PRINT "Compañia    Factura     Fecha" "\n\r"
      
FOREACH PEDIDO IN PEDIDOS.LISTA_PEDIDOS
	PRINTF LINEA_FACTURA PEDIDO.COMPANIA PEDIDO.NUMERO PEDIDO.FECHA "\n"	
	PRINTF LINEA_MONTO  "Monto:  " PEDIDO.TOTAL "\n\r"
NEXT

PRINT "\n\n\r"
