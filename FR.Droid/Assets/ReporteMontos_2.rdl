DEFINE FORMATO_CORTO "XXXXXXXXXXXXXXX|LEFT"
DEFINE FORMATO_LARGO "XXXXXXXXXXXXXXXXXXXX|LEFT"
DEFINE FORMATO_NUMERO "XXXXXXXXXXXXXXXXX|LEFT" "$#######0.00|RIGHT"
DEFINE FORMATO_FECHA "dd/MM/yyyy"

PRINT "\n\n\r"
FONT "IS204" 10

PRINT "Reporte de Montos\n\r"
PRINT "Cobrados y Vendidos\n\r"
PRINT "Fecha:"
PRINTF FORMATO_FECHA TRANSACCIONES.FECHA "\n\r"

PRINT "\n\n\r"

FOREACH CLIENTE IN TRANSACCIONES.CLIENTES

	PRINT "Código:" CLIENTE.CODIGO "\n\r"
	PRINT "Cliente:" 
	PRINTF FORMATO_CORTO CLIENTE.NOMBRE "\n\r"
	PRINTF FORMATO_NUMERO "Cobrado:" CLIENTE.COBRADO "\n\r"
	PRINTF FORMATO_NUMERO "Notas de crédito:" CLIENTE.NOTAS_CREDITO "\n\r"
	PRINTF FORMATO_NUMERO "Vendido:" CLIENTE.VENDIDO "\n\r" 
	PRINTF FORMATO_NUMERO "  Preventa:" CLIENTE.PREVENTA "\n\r"
	PRINTF FORMATO_NUMERO "  Facturado:" CLIENTE.FACTURADO "\n\n\r"

NEXT

PRINTF FORMATO_NUMERO "Total Cobrado:" TRANSACCIONES.TOTAL_COBRADO "\n\r"
PRINTF FORMATO_NUMERO "Total Vendido:" TRANSACCIONES.TOTAL_VENDIDO "\n\r"
PRINTF FORMATO_NUMERO "  Preventa:" TRANSACCIONES.TOTAL_PEDIDOS "\n\r"
PRINTF FORMATO_NUMERO "  Facturado:" TRANSACCIONES.TOTAL_FACTURAS

PRINT "\n\n\n\r"