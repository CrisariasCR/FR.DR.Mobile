DEFINE FORMATO_LARGO "XXXXXXXXXXXXXXXXXXXX|LEFT"
DEFINE FORMATO_NUMERO "$#######0.00|RIGHT"
DEFINE FORMATO_FECHA "dd/MM/yyyy"
DEFINE FORMATO_LINEA_PEDIDO "X|LEFT" "XXXXX|LEFT" "XXXXXXXXXXXX|LEFT" "#0.00|RIGHT" "#0.00|RIGHT" "$#####0.00|RIGHT"

PRINT "\n\n\r"
FONT "IS204" 10

FOREACH PEDIDO IN PEDIDOS.LISTA_PEDIDOS

	PRINT "Pedido\n\r"
	PRINT "Pedido#:   " PEDIDO.NUMERO "\n\r"
	PRINT "Fecha:     " 
	PRINTF FORMATO_FECHA PEDIDO.FECHA 
	PRINT "\n\r"
	PRINT "Cliente:   " 
	PRINTF FORMATO_LARGO PEDIDOS.CLIENTE_NOMBRE "\n\r"
	PRINT "Dirección: " 
	PRINTF FORMATO_LARGO PEDIDOS.CLIENTE_DIRECCION "\n\r"
	PRINT "Compañia:  " PEDIDO.COMPANIA "\n\r"
	PRINT "Condición: " PEDIDO.CONDICIONPAGOPEDIDO "\n\n\r"

	PRINT "Detalle del pedido\n\r"
	PRINT "                    Unidades          \n\r"	
	PRINT " Cód  Descripción   Alm  Det     Monto\n\r"	

	FOREACH LINEA_PEDIDO IN PEDIDO.DETALLES
		PRINTF FORMATO_LINEA_PEDIDO LINEA_PEDIDO.BONIFICADA LINEA_PEDIDO.CODIGO LINEA_PEDIDO.DESCRIPCION LINEA_PEDIDO.ALMACEN LINEA_PEDIDO.DETALLE LINEA_PEDIDO.MONTO "\n\r"
	NEXT

	PRINT "\n\r"
	PRINT "SubTotal:     "
	PRINTF FORMATO_NUMERO PEDIDO.SUB_TOTAL "\n\r"

	PRINT "Imp.Venta:    " 
	PRINTF FORMATO_NUMERO PEDIDO.IMP_VENTA "\n\r"

	PRINT "Imp.Consumo:  "  
	PRINTF FORMATO_NUMERO PEDIDO.IMP_CONSUMO "\n\r"

	PRINT "Descuento Lin:" 
	PRINTF FORMATO_NUMERO PEDIDO.DESCUENTO "\n\r"

	PRINT "Descuento 1:  " 
	PRINTF FORMATO_NUMERO PEDIDO.DESCUENTO_UNO "\n\r"

	PRINT "Descuento 2:  " 
	PRINTF FORMATO_NUMERO PEDIDO.DESCUENTO_DOS "\n\r"

	PRINT "Total:        " 
	PRINTF FORMATO_NUMERO PEDIDO.TOTAL "\n\n\r"
		
	PRINT "*: Artículo bonificado.\n\n\r"
NEXT