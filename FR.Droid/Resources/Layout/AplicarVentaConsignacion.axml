<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res/FR.Droid"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    style="@style/Fondo">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.9"
        android:layout_height="0dip">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_weight=".1"
                android:layout_height="0dip"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".25"
                    android:layout_height="wrap_content"
                    style="@style/normalBoldText"
                    android:gravity="right"
                    android:text="Fecha:" />
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".37"
                    android:gravity="center"
                    style="@style/normalText"
                    android:layout_height="wrap_content"
                    local:MvxBind="Text Fecha" />
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    style="@style/normalBoldText"
                    android:text="Hora:" />
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".2"
                    android:gravity="center"
                    style="@style/normalText"
                    android:layout_height="wrap_content"
                    local:MvxBind="Text Hora" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_weight=".1"
                android:layout_height="0dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    style="@style/normalBoldText"
                    android:gravity="right"
                    android:text="Total Bruto:" />
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".7"
                    android:gravity="right"
                    style="@style/normalText"
                    local:MvxBind="Text TotalBruto,Converter=FormatoNumero"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_weight=".1"
                android:layout_height="0dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    style="@style/normalBoldText"
                    android:gravity="right"
                    android:text="Descuento 1:" />
                <EditText
                    android:layout_width="0dip"
                    android:layout_weight=".2"
                    android:id="@+id/txtDescuento1"
                    local:MvxBind="Text PorcDescuento1;Enabled Desc1Enabled"
                    style="@style/numeralEditText"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".05"
                    android:layout_height="wrap_content"
                    style="@style/normalBoldText"
                    android:gravity="center"
                    android:text="%" />
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".45"
                    android:gravity="right"
                    style="@style/normalText"
                    local:MvxBind="Text Descuento1,Converter=FormatoNumero"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_weight=".1"
                android:layout_height="0dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    style="@style/normalBoldText"
                    android:gravity="right"
                    android:text="Descuento 2:" />
                <EditText
                    android:layout_width="0dip"
                    android:layout_weight=".2"
                    android:id="@+id/txtDescuento2"
                    local:MvxBind="Text PorcDescuento2;Enabled Desc2Enabled"
                    style="@style/numeralEditText"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".05"
                    android:layout_height="wrap_content"
                    style="@style/normalBoldText"
                    android:gravity="center"
                    android:text="%" />
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".45"
                    android:gravity="right"
                    style="@style/normalText"
                    local:MvxBind="Text Descuento2,Converter=FormatoNumero"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_weight=".1"
                android:layout_height="0dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    style="@style/normalBoldText"
                    android:gravity="right"
                    android:text="Imp. Ventas:" />
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".7"
                    android:gravity="right"
                    style="@style/normalText"
                    local:MvxBind="Text ImpuestoVentas,Converter=FormatoNumero"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_weight=".1"
                android:layout_height="0dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    style="@style/normalBoldText"
                    android:gravity="right"
                    android:text="Imp.Consumo:" />
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".6"
                    android:gravity="right"
                    style="@style/normalText"
                    local:MvxBind="Text Consumo,Converter=FormatoNumero"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_weight=".1"
                android:layout_height="0dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    style="@style/normalBoldText"
                    android:gravity="right"
                    android:text="Total Neto:" />
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight=".7"
                    android:gravity="right"
                    style="@style/normalText"
                    local:MvxBind="Text TotalNeto,Converter=FormatoNumero"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight=".10"
        android:layout_height="0dip"
        android:orientation="horizontal"
        local:MvxBind="Visibility CreditoExceedVisible, Converter=BoolToVisibility,ConverterParameter=True">
        <TextView
            android:layout_width="0dip"
            android:layout_weight=".7"
            android:gravity="right"
            style="@style/normalText"
            local:MvxBind="Text TotalNeto,Converter=FormatoNumero"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_weight="0.1"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight=".10"
            android:layout_height="0dip"
            android:orientation="horizontal" />
        <ImageButton
            android:src="@drawable/ic_search"
            android:id="@+id/btnConsultar"
            android:layout_width="0dip"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            local:MvxBind="Click ComandoConsultar" />
        <ImageButton
            android:src="@drawable/ic_editar"
            android:id="@+id/btnEditar"
            android:layout_width="0dip"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            local:MvxBind="Click ComandoEditar" />
        <ImageButton
            android:src="@drawable/ic_aceptar"
            android:id="@+id/btnAceptar"
            android:layout_width="0dip"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            local:MvxBind="Click ComandoAceptar" />
    </LinearLayout>
</LinearLayout>